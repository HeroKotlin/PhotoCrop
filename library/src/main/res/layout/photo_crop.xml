<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/photo_crop_bg_color">

    <com.github.herokotlin.photoview.PhotoView
            android:id="@+id/photoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.github.herokotlin.photocrop.view.OverlayView
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"/>

    <com.github.herokotlin.photocrop.view.FinderView
            android:id="@+id/finderView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"/>

    <com.github.herokotlin.photocrop.view.ForegroundView
            android:id="@+id/foregroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"/>

    <com.github.herokotlin.photocrop.view.GridView
            android:id="@+id/gridView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"/>

</FrameLayout>